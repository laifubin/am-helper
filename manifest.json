{
  "version": "1.0",
  "manifest_version": 3,
  "name": "Amazon Helper",
  "description": "This plugin can provide some help for Amazon sellers, and the features will be continuously improved.",
  "action": {
    "default_icon": "am.png",
    "default_popup": "popup.html"
  },
  "icons": {
		"16": "am.png",
		"48": "am.png",
		"128": "am.png"
	},
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*", "https://www.amazon.ca/*"],
      "css": ["css/content.css"],
      "js": ["js/contentScript.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["js/xlsx.full.min.js", "js/md5.js", "js/utils.js", "js/ui.js", "js/getReviews.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "webRequest",
    "scripting",
    "cookies",
		"storage",
    "tabs",
    "notifications",
    "alarms"
  ],
  "host_permissions": ["https://www.sellersprite.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}